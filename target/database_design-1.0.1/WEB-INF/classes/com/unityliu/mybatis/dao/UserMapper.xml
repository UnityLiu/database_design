<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.unityliu.mybatis.dao.UserMapper">
    <resultMap id="UserResultMap" type="com.unityliu.pojo.UserIdentity">
        <result column="user_name" property="userName"></result>
        <result column="user_password" property="password"></result>
        <result column="user_identity" property="userIdentity"></result>
    </resultMap>
    
    <select id="checkUserName" parameterType="java.lang.String" resultType="java.lang.String">
        select user_name
        from user_table
        where user_name = #{str};
    </select>
    
    <select id="getLoginResult" parameterType="com.unityliu.pojo.UserIdentity" resultType="com.unityliu.pojo.UserIdentity" resultMap="UserResultMap">
        select *
        from user_table
        where user_name = #{userName};
    </select>
    <insert id="addUser" parameterType="com.unityliu.pojo.UserIdentity">
        insert into user_table (user_the_name,user_sex,born_date,user_name,user_password,user_identity) values (#{userTheName},#{userSex},#{bornDate},#{userName},#{password},#{userIdentity});
    </insert>
    
</mapper>